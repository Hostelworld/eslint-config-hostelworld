{
    "name": "eslint-config-hostelworld",
    "version": "0.2.0",
    "description": "Hostelworld javascript style rules",
    "main": "index.js",
    "scripts": {
        "preinstall": "npm run install:base && npm run install:vue",
        "install:base": "cd packages/eslint-config-hostelworld-base && npm prune && npm install",
        "install:vue": "cd packages/eslint-config-hostelworld-vue && npm prune && npm install",
        "lint": "npm run lint:base && npm run lint:vue",
        "lint:base": "cd packages/eslint-config-hostelworld-base && npm run lint",
        "lint:vue": "cd packages/eslint-config-hostelworld-vue && npm run lint",
        "test": "npm run test:base && npm run test:vue",
        "test:base": "cd packages/eslint-config-hostelworld-base && npm test",
        "test:vue": "cd packages/eslint-config-hostelworld-vue && npm test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Hostelworld/eslint-config-hostelworld"
    },
    "keywords": [
        "styleguide",
        "eslint",
        "eslintconfig"
    ],
    "author": "Ignacio Velazquez <ivelazquez85@gmail.com>",
    "contributors": [
      {
        "name": "Maxence POUTORD",
        "url": "https://twitter.com/_maxpou"
      }
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Hostelworld/eslint-config-hostelworld/issues"
    },
    "homepage": "https://github.com/Hostelworld/eslint-config-hostelworld#readme"
}
